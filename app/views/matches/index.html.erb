<div class="container">
    <h5 class="font-weight-bold">Partidos</h5>
    <div class="row">
        <% @matches.each do |match| %>
                <div class="col-3 border m-2"> 
                <%= link_to match_path(match.id), class: 'link_color' do %>
                    <p class="font-weight-bold text-center"><%= match.country_1.name %>  vs <%= match.country_2.name %></p>
                    <p class="text-center small"> <%= match.date.strftime("%H:%Mhs - %d/%m/%Y") %> </p> 
                <% end %>
                </div>
        <% end %>
    </div>
</div>